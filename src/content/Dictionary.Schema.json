{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "name": {
            "type": "string"
        },
        "purpose": {
            "type": "string"
        },
        "author": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "contact": {
                    "type": "string"
                }
            },
            "required": [
                "name"
            ]
        },
        "terms": {
            "type": "object",
            "properties": {
                "Adjective": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "Direction": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "Ignorable": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "Noun": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "Verb": {
                    "type": "array",
                    "items": {}
                }
            }
        },
        "fallback": {
            "type": "object"
        }
    },
    "required": [
        "name",
        "author"
    ]
}